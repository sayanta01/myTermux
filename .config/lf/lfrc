# Basic Settings
set hidden true
set ignorecase true
set icons true

# Cmds/Functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) xdg-open "$f" ;;
    esac
}}

# Create file
cmd mkfile ${{
  printf "File Name: "
  read ans
  touch $ans
}}

# Create directory
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

# Archive bindings
cmd extract ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Bindings
# Remove some defaults
map m
map n
map d
map o
map "'"
map '"'

# Basic Functions
map . set hidden!
map E extract
map ex $bash "$f"
map dd trash
map DD delete
map dr restore_trash
map md mkdir
map mf mkfile
map x cut
map y copy
map p paste
map r rename
map R reload
map U unselect
map L clear
map <enter> open

# Movement
map gd cd ~/dl
map gD cd ~/dox
map gp cd ~/pix
map gv cd ~/vids
map gh cd ~/desk
map gm cd ~/music 
map gl cd ~/.local
map gc cd ~/.config
